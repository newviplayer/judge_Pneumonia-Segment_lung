                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="15" />
                    </Style>
                </Button.Resources>
            </Button>
            <Border CornerRadius="15" Margin="0,0,590,0" HorizontalAlignment="Right" Width="400"  Height="50" VerticalAlignment="Bottom" Background="White" Opacity="0.5">
