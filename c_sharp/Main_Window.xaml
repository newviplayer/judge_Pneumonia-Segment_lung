                </Button.Resources>
            </Button>-->
            <Button x:Name="to_lung_seg" Content="폐분할" Margin="0,10,1620,0" Width="120" FontSize="20" Click="to_lung_seg_Click" Background="GreenYellow" BorderThickness="0,0,0,0" HorizontalAlignment="Right">
